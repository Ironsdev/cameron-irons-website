@page "/SelectedWork/eggchair"
@inherits LayoutComponentBase

@using MudBlazor.Utilities

<DefaultAppBar />

<div class="app-layout-container">

    @* We use a single wrapper div for the content so the padding class works correctly *@
    <div class="right-content-padding">

        @* Left Panel: This panel uses position: fixed. It is OUTSIDE the grid flow slightly now for clarity *@
        <div class="fixed-desktop-left">
            <MudPaper Class="pa-4 d-flex flex-column justify-center align-center" Elevation="0" Height="100vh">
                <MudText Color="Color.Dark" Typo="Typo.h5" Style="font-family: TitleFont2">
                    Egg Chair Design
                </MudText>
                <MudText Color="Color.Primary" Typo="Typo.h4" Style="font-family: TitleFont2" Class="mt-2">
                    University Of Iowa
                </MudText>
                <MudText Typo="Typo.h6" Style="font-family: Garamond" Align="Align.Center">
                    For this project, students were asked to select and recreate a famous chair to later incorporate
                    into a spatial design. I chose Arne Jacobsenâ€™s Egg Chair, as I immediately recognized it from its
                    appearances in iconic films. I associated the chair with a dramatic, supervillain-inspired aesthetic
                    and used that influence to inform the overall design of the space. The models and renders were
                    completed in 3ds Max. Although this is older work, it remains a project I enjoyed and one that
                    reflects my early interest in furniture and spatial storytelling.
                </MudText>
            </MudPaper>
        </div>

        @* Right Panel: The content that flows naturally *@
        <MudPaper Class="pa-4" Square="true" Elevation="0">
            <MudImage Src="images/egg/egg_1.jpg" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/egg/egg_2.jpg" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/egg/house_1.jpg" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/egg/house_2.jpg" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/egg/house_3.jpg" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/egg/house_4.jpg" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/egg/house_5.jpg" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
        </MudPaper>
    </div>
</div>