@page "/SelectedWork/colorbook"
@inherits LayoutComponentBase

@using MudBlazor.Utilities

<DefaultAppBar />

<div class="app-layout-container">

    @* We use a single wrapper div for the content so the padding class works correctly *@
    <div class="right-content-padding">

        @* Left Panel: This panel uses position: fixed. It is OUTSIDE the grid flow slightly now for clarity *@
        <div class="fixed-desktop-left">
            <MudPaper Class="pa-4 d-flex flex-column justify-center align-center" Elevation="0" Height="100vh">
                <MudText Color="Color.Dark" Typo="Typo.h5" Style="font-family: TitleFont2">
                    Color Study Book
                </MudText>
                <MudText Color="Color.Primary" Typo="Typo.h4" Style="font-family: TitleFont2" Class="mt-2">
                    University Of Iowa
                </MudText>
                <MudText Typo="Typo.h6" Style="font-family: Garamond" Align="Align.Center">
                    The Color Study Book is an engaging exploration of hue, contrast, and visual harmony, showcasing a
                    diverse
                    array of colors and intricate designs. This work invites viewers to immerse themselves in a vibrant
                    journey through color theory and aesthetic experimentation, highlighting how different shades and
                    patterns can evoke emotion and mood. By experimenting with bold and subtle palettes, the project
                    celebrates the dynamic interplay of color and form, inspiring a deeper appreciation for the power of
                    visual language.
                </MudText>
            </MudPaper>
        </div>

        @* Right Panel: The content that flows naturally *@
        <MudPaper Class="pa-4" Square="true" Elevation="0">
            <MudImage Src="images/colorbook/book_1.png" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/colorbook/book_2.png" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/colorbook/book_pink.png" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/colorbook/book_red.png" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/colorbook/book_yellow.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
        </MudPaper>
    </div>
</div>