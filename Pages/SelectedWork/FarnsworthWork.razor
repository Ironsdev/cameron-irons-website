@page "/SelectedWork/farnsworth"
@inherits LayoutComponentBase

@using MudBlazor.Utilities

<DefaultAppBar />

<div class="app-layout-container">

    @* We use a single wrapper div for the content so the padding class works correctly *@
    <div class="right-content-padding">

        @* Left Panel: This panel uses position: fixed. It is OUTSIDE the grid flow slightly now for clarity *@
        <div class="fixed-desktop-left">
            <MudPaper Class="pa-4 d-flex flex-column justify-center align-center" Elevation="0" Height="100vh">
                <MudText Color="Color.Dark" Typo="Typo.h5" Style="font-family: TitleFont2">
                    Farnsworth House Recreation
                </MudText>
                <MudText Color="Color.Primary" Typo="Typo.h4" Style="font-family: TitleFont2" Class="mt-2">
                    University Of Iowa
                </MudText>
                <MudText Typo="Typo.h6" Style="font-family: Garamond" Align="Align.Center">
                    The recreation of the Farnsworth House was a complex architectural drafting project completed in
                    AutoCAD. The objective was to faithfully blueprint Mies van der Roheâ€™s minimalist masterpiece. While
                    challenging, the project was highly rewarding, offering the opportunity to closely study and
                    recreate a house that continues to inspire visitors and designers alike.
                    This work represents an earlier stage in my practice. At the time it was created, AutoCAD relied on
                    orthographic projection which uses three coordinated 2D drawings to construct a 3D form. Today,
                    integrated 3D modeling tools are within Autocad. This project strengthened my understanding of
                    architectural drawing standards, precision, and spatial reasoning.
                </MudText>
            </MudPaper>
        </div>

        @* Right Panel: The content that flows naturally *@
        <MudPaper Class="pa-4" Square="true" Elevation="0">
            <MudImage Src="images/farnsworth/farns_house.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/farnsworth/farn_house1.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/farnsworth/farn_house2.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/farnsworth/farn_house3.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/farnsworth/farn_house4.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
        </MudPaper>
    </div>
</div>