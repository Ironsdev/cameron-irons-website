@page "/SelectedWork/popsicle"
@inherits LayoutComponentBase

@using MudBlazor.Utilities

<DefaultAppBar />

<div class="app-layout-container">

    @* We use a single wrapper div for the content so the padding class works correctly *@
    <div class="right-content-padding">

        @* Left Panel: This panel uses position: fixed. It is OUTSIDE the grid flow slightly now for clarity *@
        <div class="fixed-desktop-left">
            <MudPaper Class="pa-4 d-flex flex-column justify-center align-center" Elevation="0" Height="100vh">
                <MudText Color="Color.Dark" Typo="Typo.h5" Style="font-family: TitleFont2">
                    Popsicle Stick Chair
                </MudText>
                <MudText Color="Color.Primary" Typo="Typo.h4" Style="font-family: TitleFont2" Class="mt-2">
                    University Of Iowa
                </MudText>
                <MudText Typo="Typo.h6" Style="font-family: Garamond" Align="Align.Center">
                    The Popsicle Chair, inspired by the simplicity and playfulness of popsicle sticks, is a handcrafted
                    piece completed at the University of Iowa. This work explores the intersection of everyday materials
                    and functional design, emphasizing texture, color, and structural ingenuity. Through meticulous
                    assembly, the chair embodies a sense of nostalgia and creativity, transforming humble popsicle
                    sticks into a striking piece of furniture that invites both conversation and reflection on the
                    beauty of accessible, repurposed materials.
                </MudText>
            </MudPaper>
        </div>

        @* Right Panel: The content that flows naturally *@
        <MudPaper Class="pa-4" Square="true" Elevation="0">
            <MudImage Src="images/pop_chair/model_lineup.jpg" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/pop_chair/model_lineup2.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/pop_chair/model_lineup3.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/pop_chair/pop_chair_grid.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/pop_chair/pop_chair_grid2.png" Alt="Model Lineup"
                Style="max-width: 100%; height: auto;" />
            <MudImage Src="images/pop_chair/pop_chair.png" Alt="Model Lineup" Style="max-width: 100%; height: auto;" />
        </MudPaper>
    </div>
</div>